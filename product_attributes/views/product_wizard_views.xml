<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_product_auto_create_wizard_form" model="ir.ui.view">
        <field name="name">product.auto.create.wizard.form</field>
        <field name="model">product.auto.create.wizard</field>
        <field name="arch" type="xml">
            <form string="Tự động tạo sản phẩm">
                <sheet>
                    <div class="alert alert-info" role="alert">
                        <h3>Tự động tạo sản phẩm với Attributes &amp; Variants</h3>
                        <p>Wizard này sẽ tự động:</p>
                        <ul>
                            <li>Tạo attributes: "Đường kính" và "Chiều dài"</li>
                            <li>Tạo attribute values: M12-M36 và 100-500</li>
                            <li>Xóa sản phẩm cũ (nếu có)</li>
                            <li>Tạo 2 sản phẩm: Bulong A193M B7 và B8</li>
                            <li>Tự động tạo 198 variants (99 × 2)</li>
                        </ul>
                    </div>
                    <group>
                        <field name="id" invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_create_products" 
                            string="Tạo sản phẩm" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Hủy" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_product_auto_create_wizard" model="ir.actions.act_window">
        <field name="name">Tự động tạo sản phẩm</field>
        <field name="res_model">product.auto.create.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Item - Commented out because parent menu doesn't exist in Odoo 16 -->
    <!-- Wizard can be accessed via action or button instead -->
    <!--
    <menuitem id="menu_product_auto_create"
              name="Tự động tạo sản phẩm"
              parent="menu_product_attributes_root"
              action="action_product_auto_create_wizard"
              sequence="100"/>
    -->

    <!-- Button trong Product list view -->
    <record id="view_product_template_tree_auto_create" model="ir.ui.view">
        <field name="name">product.template.tree.auto.create</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="create">0</attribute>
            </xpath>
        </field>
    </record>

</odoo>
