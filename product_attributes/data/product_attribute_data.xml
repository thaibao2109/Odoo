        <field name="name">Loại sản phẩm</field>
        <field name="code">TYPE</field>
        <field name="attribute_type">product_type</field>
        <field name="sequence">1</field>
    </record>

    <record id="attr_type_standard" model="product.attribute.type">
        <field name="name">Tiêu chuẩn</field>
        <field name="code">STD</field>
        <field name="attribute_type">standard</field>
        <field name="sequence">2</field>
    </record>

